---
layout: layouts/base.njk
section: post
---

<article>
  <div class="billboard">
    <img src="{{ coverImage }}" />
  </div>
  <h1>{{ title }}</h1>

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
    </small>
  </p>
<a href="/categories/{{category}}">{{category}}</a>
</article>
