---
layout: layouts/base.njk
section: page
---

<article class="article-post">
  <div class="billboard">
    <img src="{{ coverImage }}?nf_resize=fit&w=1200"/>
  </div>
  <div class="article-post-wrapper grid">
    <header>
      <h1>{{ title }}</h1>
    </header>
    <section>
      {{ layoutContent | safe }}
    </section>

    <aside>
      <div class="aside-wrapper">
        {% if sideNote %}
          <div class="liner"></div>
          <h4>Did You Know?</h4>
          <p>
            {{ sideNote }}
          </p>
        {% endif %}
        {% if sideImage %}
          <figure>
            <img src="{{ sideImage }}?nf_resize=fit&w=600"/>
            {% if sideImageCaption %}
              <figcaption class="figcaption">
                <p class="side-image-caption">
                  {{ sideImageCaption }}
                </p>
              </figcaption>
            {% endif %}
          </figure>
        {% endif %}

      </div>
    </aside>

    <div class="article-meta">
      {% if tags %}
        <div class="liner"></div>
        <p class="tags">
          {% for tag in tags %}
            {%- if tag != "post" -%}
              {% set tagUrl %}/tags/{{ tag }}/{% endset %}
              <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
            {%- endif -%}
          {% endfor %}
        </p>
      {% endif %}

      <p class="goto">
        <a href="{{ '/blog/' | url }}">‚Üê Back to All Blog Posts</a>
      </p>
    </div>
  </div>
</article>