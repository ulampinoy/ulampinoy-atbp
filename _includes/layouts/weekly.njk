---
layout: layouts/base.njk
section: blog
---

<article class="article-post weekly">
  <div class="billboard">
    <img src="{{ coverImage }}?nf_resize=fit&w=1200" />
  </div>
  <div class="article-post-wrapper">
    <header>
      <h1>{{ title }}</h1>
    </header>
    <section>
      {{ layoutContent | safe }}
    </section>

    <div class="article-meta">
      {% if tags %}
      <div class="liner"></div>
      <p class="tags">
        {% for tag in tags %}
        {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
        {%- endif -%}
        {% endfor %}
      </p>
      {% endif %}

      <p>
        <small>
          <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
        </small>
      </p>
      <p class="goto">
        <a href="{{ '/blog/' | url }}">‚Üê Back to All Blog Posts</a>
      </p>
    </div>
  </div>
</article>